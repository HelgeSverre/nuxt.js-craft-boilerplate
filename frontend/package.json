{
    "name": "boilerplate",
    "version": "1.0.0",
    "description": "Basic front-end and back-end boilerplate for Nuxt.js together with Craft 3.",
    "author": "Maarten de Graaf",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "generate": "nuxt generate",
        "test": "jest",
        "tailwind-schema": "tailwind build assets/css/tailwind.css -o assets/css/tailwind-schema.css",
        "graphql-schema": "./../backend/craft craftql/tools/print-schema > schema.graphqls",
        "schemas": "npm run tailwind-schema && npm run graphql-schema"
    },
    "dependencies": {
        "@nuxtjs/apollo": "^4.0.0-rc4",
        "@nuxtjs/axios": "^5.4.1",
        "@nuxtjs/dotenv": "^1.3.0",
        "@nuxtjs/proxy": "^1.3.3",
        "@nuxtjs/redirect-module": "^0.2.0",
        "@vue/cli-shared-utils": "^3.5.1",
        "axios-extensions": "^3.0.5",
        "consola": "^2.5.6",
        "core-js": "^2.6.5",
        "cross-env": "^5.2.0",
        "graphql-tag": "^2.10.1",
        "lodash": "^4.17.11",
        "nuxt": "^2.4.5"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^1.1.0",
        "@vue/test-utils": "^1.0.0-beta.27",
        "autoprefixer": "^9.4.10",
        "babel-jest": "^24.5.0",
        "jest": "^24.5.0",
        "nodemon": "^1.18.9",
        "tailwindcss": "^0.7.0",
        "vue-jest": "^3.0.4"
    }
}
